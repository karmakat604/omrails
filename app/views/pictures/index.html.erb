<div class="container">

  <h1>Pictures</h1>

  <table class:="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Description</th>
        <th>Picture</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pictures.each do |picture| %>
        <tr>
          <td><%= picture.user.email %></td>
          <td><%= picture.description %></td>
          <td><%= picture.picture %></td>
          <td><%= link_to 'Show', picture %></td>
          <% if picture.user == current_user %>
            <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
            <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Picture', new_picture_path %>
  <% end %>
</div>